<header>
    <div class="container">
        <a class="logo" asp-controller="Home" asp-action="Index"><img src="~/images/logo-light.svg" alt="Silicon" /></a>
    
        <nav>
            <a class="nav-link" asp-controller="Home" asp-action="Index">Overview</a>
            <a class="nav-link" asp-controller="Home" asp-action="Index" asp-fragment="features">Features</a>
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="nav-link" asp-controller="Courses" asp-action="Index">Courses</a>
            }
            <a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a>
        </nav>

        <div id="theme-switch" class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                <span class="slider round"></span>
            </label>
            <label>Dark</label>
        </div>

        <div class="account-buttons">
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="btn btn-theme" asp-controller="Auth" asp-action="SignOut"><i class="fa-regular fa-arrow-right-from-bracket"></i>Sign out</a>
            }
            else
            {
                <a class="btn btn-gray" asp-controller="Auth" asp-action="SignIn"><i class="fa-regular fa-arrow-right-to-bracket"></i>Sign in</a>
                <a class="btn btn-theme" asp-controller="Auth" asp-action="SignUp"><i class="fa-regular fa-user-plus"></i>Sign up</a>            
            }   
        </div>

        <button class="btn btn-mobileMenu"><i class="fa-regular fa-bars"></i></button>
    </div>
</header>
